<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParkInfoActivity">

    <TextView
        android:id="@+id/parkNameView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_marginStart="10dp"
        android:paddingTop="5dp"
        android:text="@string/park_name"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/parkInfoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:textAlignment="viewStart"
        android:padding="15dp"
        android:text="@string/dog_list"
        android:textSize="20sp"/>

    <ListView android:id="@+id/dogListView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_row="3"
        android:layout_column="0"
        android:textAlignment="center">

    </ListView>

    <ImageView
        android:id="@+id/park_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        app:srcCompat="@drawable/falaise04"
        android:contentDescription="@string/park_placeholder" />

    <Button
        android:id="@+id/add_to_park_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="200dp"
        android:text="@string/add_dog" />
</GridLayout>